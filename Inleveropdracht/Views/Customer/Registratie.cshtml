@model Customer

<h2>Maak een nieuw account aan!</h2>

<form asp-action="Registreren" method="post">

    <div class="form-group">
        <label asp-for="CustomerName">Naam</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefoonnummer</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Adres</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CustomerPassword">Wachtwoord</label>
        <input asp-for="CustomerPassword" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mb-2">Voeg toe</button>

</form>

<button class="btn btn-primary mb-2" onclick="goBack()">Terug</button>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function goBack() {
        window.history.back();
    }
</script>

