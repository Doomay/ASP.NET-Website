@model Customer

<h2>Login-pagina</h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CustomerPassword">Password</label>
            <div class="input-group">
                <input asp-for="CustomerPassword" class="form-control password-input" type="password" />
                <div class="input-group-append">
                    <span class="input-group-text" id="show-password">
                        <i class="fa fa-eye-slash"></i>
                    </span>
                </div>
            </div>
            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
        </div>


    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mb-2">Log in</button>
</form>


<div class="mb-2">
    <form method="post" asp-controller="Customer" asp-action="Registratie">
        <button type="submit" class="btn btn-primary btn-block">Registreren</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#show-password").click(function () {
            var passwordInput = $(".password-input");
            var icon = $(this).find("i");

            if (passwordInput.attr("type") === "password") {
                passwordInput.attr("type", "text");
                icon.removeClass("fa-eye-slash").addClass("fa-eye");
            } else {
                passwordInput.attr("type", "password");
                icon.removeClass("fa-eye").addClass("fa-eye-slash");
            }
        });
    });
</script>
