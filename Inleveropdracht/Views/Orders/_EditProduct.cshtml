@model OrderItemViewModel

<form asp-action="EditProduct" asp-route-id="@Model.ProductId" method="post">
    <div class="form-group">
        <label for="ProductName">Product Naam</label>
        <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName">
    </div>
    <div class="form-group">
        <label for="ProductDescription">Product Beschrijving</label>
        <textarea class="form-control" id="ProductDescription" name="ProductDescription">@Model.ProductDescription</textarea>
    </div>
    <div class="form-group">
        <label for="ProductImage">Product Afbeelding</label>
        <input type="text" class="form-control" id="ProductImage" name="ProductImage" value="@Model.ProductImage">
    </div>
    <div class="form-group">
        <label for="Price">Prijs</label>
        <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price">
    </div>
    <div class="form-group">
    <label for="SalePercentage">Sale Percentage</label>
    <select class="form-control" id="SalePercentage" name="SalePercentage">
        <option value="0">No Sale</option>
        <option value="10">10% off</option>
        <option value="20">20% off</option>
        <option value="30">30% off</option>
        <!-- Add more options as needed -->
    </select>
</div>

    <button type="submit" class="btn btn-primary">Sla op</button>
</form>
